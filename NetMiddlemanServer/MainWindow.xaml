<Window x:Class="NetMiddlemanServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NetMiddlemanServer" Height="198" Width="331">
    <Grid>
        <Label Content="客户端发送端口：" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="NMportTextBox" Height="23" Margin="116,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <Label Content="服务端监听端口：" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ListenPortTextBox" Height="23" Margin="116,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <Button Name="StartListenButton" Content="开始监听" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Click="OnListenClick"/>
        <Button Name="StopListenButton" Content="停止监听" HorizontalAlignment="Left" Margin="90,70,0,0" VerticalAlignment="Top" Width="75" Click="OnStopListen"/>
        <Label Name="StateLabel" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.4" Width="226" Height="29"/>
    </Grid>
</Window>
